<section class="people">
  <header class="title-header bg-orange">People Management</header>
  <p>Here, you can manage people</p>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th></th>
      </tr>
    </thead>
  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= "#{person.first_name} #{person.last_name}" %></td>
      <td><%= person.email %></td>
      <td><%= person.department %></td>
      <td><%= button_to "Destroy", admin_person_path(person), method: :delete , class: "destroy-button"%></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</section>
